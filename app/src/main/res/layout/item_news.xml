<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/snowstorm"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titoloNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/snowstorm"
            android:text="Titolo News"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/immagineNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/dataNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data News"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/descrizioneNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrizione News"
            android:textSize="14sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>